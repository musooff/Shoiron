<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/topbuttons">
        <attor.shoiron.CustomMainButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/cmb_level"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Зина: 13"
            android:layout_marginLeft="16dp"
            android:theme="@style/MyButton"
            android:drawableLeft="@drawable/ic_badge"
            android:drawablePadding="5dp"
            />
        <attor.shoiron.CustomMainButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"
            android:text="Танга: 15 +"
            android:id="@+id/cmb_coin"
            android:drawableLeft="@drawable/ic_coins_1"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:theme="@style/MyButton2"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/topbuttons"
        android:layout_above="@+id/ll_dashes"
        android:id="@+id/ll_pictures">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_marginBottom="16dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/imageView_0"
                    android:scaleType="fitXY"
                    android:src="@drawable/rudaki_1" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/imageView_1"
                    android:scaleType="fitXY"
                    android:src="@drawable/rudaki_2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/imageView_2"
                    android:scaleType="fitXY"
                    android:src="@drawable/rudaki_3" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/imageView_3"
                    android:scaleType="fitXY"
                    android:src="@drawable/rudaki_4"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_above="@+id/ll_hintandask"
        android:layout_centerHorizontal="true"
        android:id="@+id/ll_dashes">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/dash"
            android:id="@+id/dash_0" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/dash"
            android:id="@+id/dash_1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/dash"
            android:id="@+id/dash_2" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/dash"
            android:id="@+id/dash_3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/dash"
            android:id="@+id/dash_4" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/dash"
            android:id="@+id/dash_5" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/dash"
            android:id="@+id/dash_6" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/dash"
            android:id="@+id/dash_7" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/dash"
            android:id="@+id/dash_8" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_above="@+id/ll_chars"
        android:layout_centerHorizontal="true"
        android:id="@+id/ll_hintandask">

        <attor.shoiron.CustomMainButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:id="@+id/ask_friend_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Ёрӣ аз дӯстон"
            android:theme="@style/MyButton"
            android:drawableLeft="@drawable/ic_friends"
            android:drawablePadding="5dp"/>

        <attor.shoiron.CustomMainButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/hint_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Кӯмак кунед"
            android:theme="@style/MyButton2"
            android:drawableLeft="@drawable/ic_help"
            android:drawablePadding="5dp"  />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
        android:layout_centerHorizontal="true"
        android:id="@+id/ll_chars"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_0"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>

            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>

            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_2"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>

            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_3"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>

            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/button"/>

            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_5"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>

            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_6"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_7"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>
            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_8"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>
            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_9"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>
            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_10"
                android:textColor="@color/white"
                android:background="@drawable/button"/>
            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/char_11"
                android:background="@drawable/button"/>
            <attor.shoiron.CustomMainButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:id="@+id/char_12"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button"/>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
